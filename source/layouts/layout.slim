doctype html
html lang="ja" prefix="og: http://ogp.me/ns# fb: http://www.facebook.com/2008/fbml"
  head
    meta charset="utf-8"
    title == data.page.title

    meta name="description" content="#{data.page.description}"
    meta name="keywords" content="#{data.page.keywords}"
    meta name="robots" content="index,follow"
    meta name="viewport" content="width=device-width"

    / OGP
    / meta property="fb:admins" content="#"
    / meta property="fb:app_id" content="#"
    meta property="og:url" content="http://tsahala.github.io/shiwa"
    meta property="og:type" content="website"
    meta property="og:title" content="いやいやここのしわ"
    meta property="og:locale" content="ja_JP"
    meta property="og:image" content="./assets/images/shiwa.png"
    meta property="og:description" content="どごでみだだれ"
    meta property="og:site_name" content="いやいやここのしわ"
    / meta property="article:publisher" content=""
    / meta name="twitter:site" value="@#"
    / meta name="twitter:creator" value="@#"
    / meta name="twitter:card" value="summary_large_image"
    / link rel="author" href="https://plus.google.com/(Google+ ID)"

    == stylesheet_link_tag "style"
    == favicon_tag "favicon.ico"
    / == favicon_tag "apple-touch-icon.png", :rel => "apple-touch-icon-precomposed"
    / link rel="canonical" href=""

    /[if lt IE 9]
      script src="//html5shiv.googlecode.com/svn/trunk/html5.js"
      / script src="//ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"
      script src="//css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"

  body class="#{page_classes}"
    / header
    == partial 'partial/_header'

    / main
    == yield

    / footer
    == partial 'partial/_footer'

    / script
    == javascript_include_tag  "all"
    == partial 'partial/_script'